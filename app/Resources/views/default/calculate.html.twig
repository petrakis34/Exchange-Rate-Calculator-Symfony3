{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
     <div class="bg-faded p-4 my-4">
        <hr class="divider">
        <h2 class="text-center text-lg text-uppercase my-0">Calculate your Currency</h2>
        <hr class="divider">
        <form class="calcForm">
          <div class="row">
            <div class="form-group col-lg-4">
              <label class="text-heading">Enter the amount you want to convert</label>
              <input type="text" placeholder="Enter the amount Here.." class="form-control" id="valuePrice">
            </div>
            <div class="form-group col-lg-4">
                <label class="text-heading">Select the pair of Currencies</label>
                <select class="form-control" id="cur_select">
                {% for i in currency %}
                    <option value={{i.getId}}>{{ i.getTargetName }}-{{i.getBaseName}} at {{i.getTargetPrice}}</option>
                {% endfor %}
                </select>
            </div>
            <div class="clearfix"></div>
            <div class="form-group col-lg-12">
                <button class="btn btn-lg btn-info" id="calculateBtn">Calculate Amount</button>
            </div>
            <div class="form-group col-lg-12">
                <h5>CONVERTED PRICE:  <span class="showResult text-danger"></span></h5>
            </div>
          </div>
        </form>
      </div>

    </div>
{% endblock %}