{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
     <div class="bg-faded p-4 my-4">
        <hr class="divider">
        <h2 class="text-center text-lg text-uppercase my-0">Create your pair of Currencies</h2>
        <hr class="divider">

        <form action={{path("create_currency")}} method="post" data-toggle="validator">
          <div class="row">
            <div class="form-group col-lg-4">
              <label class="text-heading">Enter a 3 letter Base Currency</label>
              <input type="text" placeholder="Enter the Base Currency Here.." class="form-control inputCur" name="baseCurrency" required>
              <p class="error1 text-danger"> </p>
            </div>
            <div class="form-group col-lg-4">
              <label class="text-heading">Enter a 3 letter Target Currency</label>
              <input type="text" placeholder="Enter the Target Currency Here.." class="form-control inputCur" name="targetCurrency" required>
              <p class="error1 text-danger"> </p>
            </div>
            <div class="form-group col-lg-4">
              <label class="text-heading">Enter Exchange rate</label>
              <input type="text" placeholder="Enter the rate Here.." class="form-control inputRate" name="targetPair" required>
              <p class="error2 text-danger"> </p>
            </div>

            <div class="clearfix"></div>
            <div class="form-group col-lg-12">
                <button class="btn btn-lg btn-info" type="submit">CREATE PAIR</button>
            </div>
          </div>
        </form>

      </div>

    </div>
{% endblock %}


